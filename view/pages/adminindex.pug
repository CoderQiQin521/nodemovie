doctype html
html(lang='zh-CN')
  head
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
    title 朵朵电影后台管理
    link(rel="stylesheet", href="/lib/bootstrap/dist/css/bootstrap.min.css")
    script(src="/lib/jquery/dist/jquery.min.js")
    script(src="/lib/bootstrap/dist/js/bootstrap.min.js")
  body
    nav.navbar.navbar-dark.bg-primary
            .container
                a.navbar-brand(href="#") 朵朵电影后台管理
                .navbar-right
                    a.btn.btn-warning(href="/") 返回前台
    .container
      a.btn.btn-success(href="/admin/add") 添加电影
      a.btn.btn-success(href="/user/list") 用戶列表
      .table-responsive
        table.table.table-hover.table-dark
          thead
            tr
              th 片名
              th 导演
              th 国家
              th 上映年份
              th 录入日期
              th 最后修改日期
              th 操作
          tbody
            each item in movies
              tr(class="item-id-" + item._id)
                td= item.title
                td= item.doctor
                td= item.country
                td= item.year
                td= moment(item.meta.createAt).format('YYYY/MM/DD H:mm:ss')
                td= moment(item.meta.updateAt).format('YYYY/MM/DD H:mm:ss')
                td
                  .btn-group.btn-group-sm(role="group")
                    a.btn.btn-warning(href="/admin/add?id=" + item._id) 修改
                    button.btn.btn-danger.del(type="button" data-id=item._id) 删除
    #myModal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title 提示
          .modal-body
            p 是否删除本条影片?
          .modal-footer
            button.btn.btn-default(type="button" data-dismiss="modal") 取消
            button.btn.btn-primary.yes(type="button") 确定

  script(src="/js/admin.js")